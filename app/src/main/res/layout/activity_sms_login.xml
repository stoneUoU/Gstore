<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:windowSoftInputMode="adjustPan"
    tools:context="com.Start.SmsLoginActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/closeIMV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/login_icon_guanbi" />
        <Button
            android:id="@+id/codeLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F34C1E"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/closeIMV"
            android:text="密码登录"/>
        <ImageView
            android:id="@+id/logoIMV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/codeLoginBtn"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@mipmap/app_login_pic" />

        <TextView
            android:id="@+id/backAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21dp"
            android:layout_below="@id/logoIMV"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:text="欢迎回来"/>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/backAgain"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:hint="手机号"
            android:paddingLeft="5dp"
            android:inputType="phone"
            android:textSize="16dp"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:paddingTop="5dp"/>
        <com.View.TimerBtn
            android:id="@+id/smsBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_alignBaseline="@+id/user_name"
            android:textColor="#F34C1E"
            android:textSize="16dp" />


        <View
            android:id="@+id/line_firstV"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@id/user_name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@+id/sms_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_firstV"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="验证码"
            android:inputType="phone"
            android:textSize="16dp"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="16dp"/>

        <View
            android:id="@+id/line_secondV"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@id/sms_code"
            android:layout_marginTop="-1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>

        <Button
            android:id="@+id/smsLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/line_secondV"
            android:textSize="18dp"
            android:background="@drawable/btn_radius"
            android:text="登录"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
